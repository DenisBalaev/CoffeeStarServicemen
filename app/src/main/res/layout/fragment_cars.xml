<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CarsFragment"
    android:background="@color/black_101010">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounder_search"
        android:drawableStart="@drawable/ic_search"
        android:paddingVertical="10sp"
        android:paddingStart="12dp"
        android:paddingEnd="0dp"
        android:drawablePadding="8dp"
        android:hint="Номер машины или место"
        android:textColorHint="@color/gray_8B8B8B"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_filtration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        />

    <Spinner
        android:id="@+id/spinner_sorting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:background="@null"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cars"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:layout_marginTop="16dp"
        />

</LinearLayout>